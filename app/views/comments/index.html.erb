<div class="wrapper">
  <div class="contents">
    <div class="graph">
      <p class="user_name">棒グラフ</p>
      <canvas id="myBarChart"></canvas>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>

        <script>
          var ctx = document.getElementById("myBarChart");
          var myBarChart = new Chart(ctx, {
            type: 'bar',
            data: {
              labels: ['8月1日', '8月2日', '8月3日', '8月4日', '8月5日', '8月6日', '8月7日'],
              datasets: [
                {
                  label: 'A店 来客数',
                  data: [6, 6, 9, 8, 5, 6, 4],
                  backgroundColor: "rgba(219,39,91,0.5)"
                // },{
                //   label: 'B店 来客数',
                //   data: [55, 45, 73, 75, 41, 45, 58],
                //   backgroundColor: "rgba(130,201,169,0.5)"
                // },{
                //   label: 'C店 来客数',
                //   data: [33, 45, 62, 55, 31, 45, 38],
                //   backgroundColor: "rgba(255,183,76,0.5)"
                }
              ]
            },
            options: {
              title: {
                display: true,
                text: '支店別 来客数'
              },
              scales: {
                yAxes: [{
                  ticks: {
                    suggestedMax: 10,
                    suggestedMin: -10,
                    stepSize: 1,
                    callback: function(value, index, values){
                      return  value +  '人'
                    }
                  }
                }]
              },
            }
          });
        </script>
    </div>

    <div calss="comments">
      <div class="comment">
        <% if @comments.present? %>
          <% @comments.each do |c|%>
            <div class="comment_box">
              <%= c.comment %>
              <ul class="comment_info">
                <li><%= c.user.name%></li>
                <li><%= c.created_at.strftime('%Y/%m/%d')%></li>
              </ul>
            </div>
          <% end %>
        <% else %>
          <p>コメントを書こう</p>
        <% end %>
      </div>
      <div class="comment_send">
        <%= form_with url: @comment do |f| %>
          <%= f.text_field :comment, class:"text_box" %>
          <%= f.submit "コメントする", class:"btn" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
